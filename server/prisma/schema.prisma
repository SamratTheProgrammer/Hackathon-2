generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id          String        @id @default(uuid())
  name        String
  email       String        @unique
  password    String
  mobile      String
  dob         DateTime
  kycDocument String?
  profilePhoto String?
  role        String        @default("USER") // USER, ADMIN
  balance     Float         @default(0.0)
  points      Int           @default(0)
  accountNumber String?     @unique
  twoFactorEnabled Boolean  @default(false)
  autoLogout  Boolean       @default(true)
  transactions Transaction[]
  devices     Device[]
  notifications Notification[]
  createdAt   DateTime      @default(now())
  updatedAt   DateTime      @updatedAt
}

model Device {
  id          String   @id @default(uuid())
  userId      String
  user        User     @relation(fields: [userId], references: [id])
  name        String   // e.g., "Chrome on Windows"
  type        String   // e.g., "Desktop", "Mobile"
  location    String?  // e.g., "Mumbai, India"
  lastActive  DateTime @default(now())
  token       String   // To identify the session/device
  isCurrent   Boolean  @default(false) // Helper for frontend, though usually derived from token
}

model Transaction {
  id        String   @id @default(uuid())
  amount    Float
  type      String   // credit, debit
  status    String   @default("Success") // Success, Pending, Failed
  date      DateTime @default(now())
  to        String?  // Recipient name or description
  rejectionReason String?
  userId    String
  user      User     @relation(fields: [userId], references: [id])
}

model Reward {
  id          String   @id @default(uuid())
  title       String
  description String
  points      Int
  image       String?  // URL to image
  createdAt   DateTime @default(now())
}

model Coupon {
  id          String   @id @default(uuid())
  code        String   @unique
  discount    String   // e.g., "50% OFF" or "â‚¹100 OFF"
  expiryDate  DateTime?
  title       String?  // e.g., "Amazon Shopping"
  createdAt   DateTime @default(now())
}

model Notification {
  id        String   @id @default(uuid())
  title     String
  message   String
  type      String   // "transaction", "reward", "security", "system"
  relatedId String?  // ID of the transaction or reward to link to
  isRead    Boolean  @default(false)
  userId    String
  user      User     @relation(fields: [userId], references: [id])
  createdAt DateTime @default(now())
}
